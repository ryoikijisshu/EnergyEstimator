<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Kakunin">

    <TextView
            android:text="あなたの推定エネルギー必要量は…"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginTop="86dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="あ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kcal" android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="202dp" android:layout_marginStart="202dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="202dp"
            android:layout_marginRight="202dp" android:layout_marginTop="77dp"
            app:layout_constraintTop_toBottomOf="@+id/text"/>
    <TextView
            android:text="kcal/日です！"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="111dp" android:layout_marginStart="111dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="111dp"
            android:layout_marginRight="111dp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/kcal" android:layout_marginBottom="168dp"
            app:layout_constraintBottom_toTopOf="@+id/back"/>
    <Button
            android:text="トップに戻る"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back" android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="103dp" android:layout_marginStart="103dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="103dp"
            android:layout_marginRight="103dp" android:layout_marginBottom="165dp"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="onbackButtonTapped"/>
</android.support.constraint.ConstraintLayout>