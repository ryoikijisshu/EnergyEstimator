<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultActivity">

    <TextView
            android:text="入力内容"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/concents_inputted_text" android:textSize="30sp"/>
    <TextView
            android:text="性別"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gender_text2" app:layout_constraintStart_toStartOf="@+id/concents_inputted_text"
            android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/concents_inputted_text"
            android:textSize="30sp"/>
    <TextView
            android:text="体重"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weight_text2" app:layout_constraintStart_toStartOf="@+id/gender_text2"
            app:layout_constraintTop_toBottomOf="@+id/gender_text2" android:layout_marginTop="70dp"
            android:textSize="30sp"/>
    <TextView
            android:text="年齢"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/age_text2" app:layout_constraintStart_toStartOf="@+id/weight_text2"
            app:layout_constraintTop_toBottomOf="@+id/weight_text2" android:layout_marginTop="70dp"
            android:textSize="30sp"/>
    <TextView
            android:text="身体活動レベル"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/age_text2"
            app:layout_constraintTop_toBottomOf="@+id/age_text2" android:layout_marginTop="70dp"
            android:textSize="30sp" android:id="@+id/level_of_physical_level_text2"/>
    <Button
            android:text="戻る"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_button" android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="160dp"
            android:layout_marginStart="160dp" android:textSize="30sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gender_num_text"
            app:layout_constraintTop_toTopOf="@+id/gender_text2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp" android:layout_marginRight="50dp" android:textSize="30sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weight_num_text"
            app:layout_constraintTop_toTopOf="@+id/weight_text2" app:layout_constraintEnd_toEndOf="@+id/gender_num_text"
            android:textSize="30sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/age_num_text"
            app:layout_constraintTop_toTopOf="@+id/age_text2" app:layout_constraintEnd_toEndOf="@+id/weight_num_text"
            android:textSize="30sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/level_num_text"
            app:layout_constraintTop_toTopOf="@+id/level_of_physical_level_text2"
            app:layout_constraintEnd_toEndOf="@+id/age_num_text"
            android:textSize="30sp"/>
</android.support.constraint.ConstraintLayout>