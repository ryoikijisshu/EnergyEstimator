<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultActivity">

    <TextView
            android:text="入力内容"
            android:layout_width="127dp"
            android:layout_height="39dp"
            android:id="@+id/textView5" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.061" app:layout_constraintVertical_bias="0.124"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:text="性別"
            android:layout_width="130dp"
            android:layout_height="37dp"
            android:id="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="@+id/textView5"
            android:layout_marginTop="50dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:text="体重"
            android:layout_width="125dp"
            android:layout_height="38dp"
            android:id="@+id/textView7" app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6" android:layout_marginTop="50dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:text="年齢"
            android:layout_width="143dp"
            android:layout_height="43dp"
            android:id="@+id/textView8"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="@+id/textView7"
    />
    <TextView
            android:text="身体活動レベル"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8" android:layout_marginTop="50dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:text="TextView"
            android:layout_width="137dp"
            android:layout_height="37dp"
            android:id="@+id/weight"
            app:layout_constraintTop_toTopOf="@+id/textView7"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="@+id/gender"/>
    <Button
            android:text="いいえ"
            android:layout_width="156dp"
            android:layout_height="54dp"
            android:id="@+id/back"
            app:layout_constraintTop_toBottomOf="@+id/textView13" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.899"
            app:layout_constraintVertical_bias="0.571"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/active"
            app:layout_constraintTop_toTopOf="@+id/textView9" app:layout_constraintStart_toStartOf="@+id/age"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:text="TextView"
            android:layout_width="98dp"
            android:layout_height="33dp"
            android:id="@+id/age"
            app:layout_constraintTop_toTopOf="@+id/textView8" app:layout_constraintStart_toStartOf="@+id/weight"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gender"
            app:layout_constraintTop_toTopOf="@+id/textView6" app:layout_constraintStart_toEndOf="@+id/textView6"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <Button
            android:text="はい"
            android:layout_width="156dp"
            android:layout_height="54dp"
            app:layout_constraintTop_toTopOf="@+id/back" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:id="@+id/next"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:text="以下の内容でよろしいですか？"/>
</android.support.constraint.ConstraintLayout>