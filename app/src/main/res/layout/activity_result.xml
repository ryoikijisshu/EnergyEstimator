<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Result">

    <TextView
            android:text="性別"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seibetu" android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seibetu_result" android:text="あ" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" app:layout_constraintStart_toEndOf="@+id/seibetu"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="157dp"
            android:layout_marginRight="157dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="30sp"/>
    <TextView
            android:text="体重"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weight" android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/seibetu"/>
    <TextView
            android:text="年齢"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/age" android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/weight"/>
    <TextView
            android:text="身体活動レベル"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/level" android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/age"/>
    <TextView
            android:text="え"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/level_result" android:layout_marginLeft="40dp" android:layout_marginStart="40dp"
            app:layout_constraintStart_toEndOf="@+id/level" android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="110dp"
            android:layout_marginRight="110dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="321dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="以上の内容でよろしいですか？"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text" android:textSize="28sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="117dp"
            app:layout_constraintTop_toBottomOf="@+id/level"
            android:layout_marginBottom="150dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="はい"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yes" android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="45dp" android:layout_marginStart="45dp" android:layout_marginBottom="97dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="55dp"
            app:layout_constraintTop_toBottomOf="@+id/text" android:onClick="onYesButtonTapped"/>
    <Button
            android:text="いいえ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/no" android:textSize="30sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="45dp" android:layout_marginRight="45dp"
            app:layout_constraintStart_toEndOf="@+id/yes" android:layout_marginLeft="120dp"
            android:layout_marginStart="120dp" android:layout_marginBottom="97dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="55dp"
            app:layout_constraintTop_toBottomOf="@+id/text"/>
    <TextView
            android:text="い"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weight_result2" android:textSize="30sp"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/seibetu_result"
            app:layout_constraintStart_toEndOf="@+id/weight" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="157dp"
            android:layout_marginRight="157dp"/>
    <TextView
            android:text="う"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/age_result2" android:textSize="30sp"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/weight_result2"
            app:layout_constraintStart_toEndOf="@+id/age" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="157dp" android:layout_marginEnd="157dp"/>
</android.support.constraint.ConstraintLayout>