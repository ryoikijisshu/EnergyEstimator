<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultActivity">

    <TextView
            android:text="入力内容"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/concent" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="30sp"/>
    <TextView
            android:text="性別"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gender" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" app:layout_constraintTop_toBottomOf="@+id/concent"
            android:layout_marginTop="32dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="30sp"/>
    <TextView
            android:text="体重"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weight" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/gender"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="30sp"/>
    <TextView
            android:text="年齢"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/age" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/weight" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:textSize="30sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:text="身体活動レベル"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/level" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/age"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="30sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/genderid" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp" app:layout_constraintTop_toTopOf="@+id/gender"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="30sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weightid" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp" app:layout_constraintTop_toTopOf="@+id/weight"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="30sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ageid" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp" app:layout_constraintTop_toTopOf="@+id/age" android:textSize="30sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/levelid" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp" app:layout_constraintTop_toTopOf="@+id/level"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="30sp"/>
    <Button
            android:text="戻る"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/back" android:layout_marginBottom="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="30sp"/>
</android.support.constraint.ConstraintLayout>