<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultActivity">

    <TextView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:id="@+id/agetextView"
            app:layout_constraintStart_toStartOf="@+id/weighttextView"
            android:layout_marginTop="32dp"
            android:textSize="24sp" android:gravity="center" app:layout_constraintTop_toBottomOf="@+id/weighttextView"/>
    <TextView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:id="@+id/gendertextView"
            android:textSize="24sp" android:gravity="center" app:layout_constraintTop_toTopOf="@+id/textView1"
            app:layout_constraintStart_toEndOf="@+id/textView1" android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"/>
    <TextView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:id="@+id/weighttextView"
            app:layout_constraintStart_toStartOf="@+id/gendertextView"
            android:layout_marginTop="32dp"
            android:textSize="24sp" android:gravity="center" app:layout_constraintTop_toBottomOf="@+id/gendertextView"/>
    <TextView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:id="@+id/leveltextView"
            app:layout_constraintStart_toStartOf="@+id/agetextView"
            android:layout_marginTop="32dp"
            android:textSize="24sp" android:gravity="center" app:layout_constraintTop_toBottomOf="@+id/agetextView"
    />
    <TextView
            android:text="体重"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView1"
            android:layout_marginTop="32dp"
            android:textSize="24sp" android:gravity="center" app:layout_constraintTop_toBottomOf="@+id/textView1"/>
    <TextView
            android:text="年齢"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            android:layout_marginTop="32dp"
            android:textSize="24sp" android:gravity="center" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="身体活動レベル"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            android:layout_marginTop="32dp"
            android:textSize="24sp" android:gravity="center" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="入力内容"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.229" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.042"
            android:textSize="24sp" android:gravity="center"/>
    <TextView
            android:text="性別"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:id="@+id/textView1"
            app:layout_constraintStart_toStartOf="@+id/textView"
            android:layout_marginTop="32dp"
            android:textSize="24sp" android:gravity="center" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/returnbutton" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.988"
            android:textSize="24sp" android:text="戻る"/>
</android.support.constraint.ConstraintLayout>