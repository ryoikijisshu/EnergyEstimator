<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultActivity">

    <TextView
            android:text="あなたの推定エネルギー必要量は"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text1" android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="100dp"
            app:layout_constraintHorizontal_bias="0.444"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resultText" android:textSize="50sp"
            app:layout_constraintTop_toBottomOf="@+id/text1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="88dp"/>
    <TextView
            android:text="kcal/日です"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text2" android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@+id/resultText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="68dp"
            app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="トップに戻る"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/returnButton"
            app:layout_constraintTop_toBottomOf="@+id/text2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>