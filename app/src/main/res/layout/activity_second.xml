<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity">

    <TextView
            android:text="入力内容"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/inputContent" android:textSize="24sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.142"
            app:layout_constraintVertical_bias="0.108"/>
    <TextView
            android:text="性別"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sex"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/inputContent"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/inputContent"/>
    <TextView
            android:text="TextView"
            android:layout_width="111dp"
            android:layout_height="32dp"
            android:id="@+id/textSex" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="@+id/sex"
            app:layout_constraintStart_toEndOf="@+id/sex" android:layout_marginStart="132dp"
            android:layout_marginLeft="132dp"/>
    <TextView
            android:text="年齢"
            android:layout_width="50dp"
            android:layout_height="36dp"
            android:id="@+id/age2"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/sex"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/sex"/>
    <TextView
            android:text="TextView"
            android:layout_width="106dp"
            android:layout_height="39dp"
            android:id="@+id/textAge" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="@+id/age2" app:layout_constraintStart_toEndOf="@+id/age2"
            android:layout_marginLeft="132dp" android:layout_marginStart="132dp"/>
    <TextView
            android:text="体重"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weight2" android:textSize="24sp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/age2"
            app:layout_constraintStart_toStartOf="@+id/age2"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textWeight" app:layout_constraintStart_toEndOf="@+id/weight2"
            android:layout_marginLeft="132dp" android:layout_marginStart="132dp"
            app:layout_constraintTop_toTopOf="@+id/weight2" android:textSize="24sp"/>
    <TextView
            android:text="身体活動レベル"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity"
            app:layout_constraintTop_toBottomOf="@+id/weight2" app:layout_constraintStart_toStartOf="@+id/weight2"
            android:layout_marginTop="40dp"
            android:textSize="24sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textActivity" app:layout_constraintStart_toEndOf="@+id/activity"
            android:layout_marginLeft="12dp" android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@+id/activity" android:textSize="24sp"/>
    <Button
            android:text="戻る"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/buttonBack" android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.848"/>
</android.support.constraint.ConstraintLayout>