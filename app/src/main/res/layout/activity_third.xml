<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ThirdActivity">

    <TextView
            android:text="あなたの推定エネルギー必要量は…"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textResultStr" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.199"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textCal" app:layout_constraintTop_toBottomOf="@+id/textResultStr"
            android:textSize="30sp" android:layout_marginTop="80dp"/>
    <Button
            android:text="トップに戻る"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/buttonBackToTop" android:layout_marginTop="184dp"
            app:layout_constraintTop_toBottomOf="@+id/textCal" app:layout_constraintHorizontal_bias="0.498"/>
</android.support.constraint.ConstraintLayout>