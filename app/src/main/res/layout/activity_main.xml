<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <SeekBar
            android:layout_width="267dp"
            android:layout_height="83dp"
            android:id="@+id/ageSeek"
            android:progress="0" android:max="100" android:min="0"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ageText" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <SeekBar
            android:layout_width="267dp"
            android:layout_height="83dp"
            android:id="@+id/weightSeek"
            android:progress="30" android:max="100" android:min="30"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/weightText" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <TextView
            android:text="性別"
            android:layout_width="100dp"
            android:layout_height="61dp"
            android:id="@+id/sexText" android:textSize="40sp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"/>
    <TextView
            android:text="年齢"
            android:layout_width="100dp"
            android:layout_height="61dp"
            android:id="@+id/ageText" android:textSize="40sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/weightSeek"
            app:layout_constraintStart_toStartOf="@+id/weightText"/>
    <TextView
            android:text="身体活動レベル"
            android:layout_width="339dp"
            android:layout_height="49dp"
            android:id="@+id/moveLevel" android:textSize="40sp"
            app:layout_constraintTop_toBottomOf="@+id/ageSeek" app:layout_constraintStart_toStartOf="@+id/ageText"
            android:layout_marginTop="24dp"/>
    <TextView
            android:text="体重"
            android:layout_width="100dp"
            android:layout_height="61dp"
            android:id="@+id/weightText" android:textSize="40sp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/sexText"
            app:layout_constraintStart_toStartOf="@+id/sexText"
    />
    <TextView
            android:text="未入力"
            android:layout_width="180dp"
            android:layout_height="61dp"
            android:id="@+id/weightResult" android:textSize="40sp"
            app:layout_constraintTop_toTopOf="@+id/weightText" app:layout_constraintStart_toEndOf="@+id/weightText"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
    <TextView
            android:text="未入力"
            android:layout_width="180dp"
            android:layout_height="61dp"
            android:id="@+id/ageResult" android:textSize="40sp"
            app:layout_constraintTop_toTopOf="@+id/ageText"
            app:layout_constraintStart_toStartOf="@+id/weightResult"/>
    <RadioGroup
            android:layout_width="191dp"
            android:layout_height="56dp" android:orientation="horizontal"
            android:id="@+id/sexSelect" app:layout_constraintStart_toEndOf="@+id/sexText"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="@+id/sexText">
        <RadioButton
                android:text="男性"
                android:layout_width="82dp"
                android:layout_height="56dp" android:id="@+id/male" android:layout_weight="1" android:textSize="25sp"/>
        <RadioButton
                android:text="女性"
                android:layout_width="90dp"
                android:layout_height="match_parent" android:id="@+id/female" android:layout_weight="1"
                android:textSize="25sp"/>
    </RadioGroup>
    <RadioGroup
            android:layout_width="333dp"
            android:layout_height="37dp" android:orientation="horizontal"
            android:id="@+id/levelSelect"
            app:layout_constraintTop_toBottomOf="@+id/moveLevel" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp">
        <RadioButton
                android:text="低"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/level1" android:layout_weight="1"
                android:textSize="25sp"/>
        <RadioButton
                android:text="中"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/level2" android:layout_weight="1"
                android:textSize="25sp"/>
        <RadioButton
                android:text="高"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/level3" android:layout_weight="1"
                android:textSize="25sp"/>
    </RadioGroup>
    <Button
            android:text="計算"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calcButton"
            app:layout_constraintTop_toBottomOf="@+id/levelSelect" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>