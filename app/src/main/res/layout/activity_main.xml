<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <TextView
            android:text="性別"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/gender" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.119"
            app:layout_constraintVertical_bias="0.077" android:textSize="20dp"/>
    <TextView
            android:text="体重"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/weight" android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/gender" app:layout_constraintEnd_toEndOf="@+id/gender"
            app:layout_constraintStart_toStartOf="@+id/gender" app:layout_constraintHorizontal_bias="0.0"
            android:textSize="20dp"/>
    <TextView
            android:text="年齢"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/age"
            app:layout_constraintTop_toBottomOf="@+id/weight" app:layout_constraintStart_toStartOf="@+id/weight"
            app:layout_constraintEnd_toEndOf="@+id/weight" android:layout_marginTop="70dp"
            app:layout_constraintHorizontal_bias="0.0" android:textSize="20dp"/>
    <TextView
            android:text="身体活動レベル"
            android:layout_width="145dp"
            android:layout_height="30dp"
            android:id="@+id/level" app:layout_constraintEnd_toEndOf="@+id/age"
            app:layout_constraintStart_toStartOf="@+id/age" android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/age" app:layout_constraintHorizontal_bias="1.0"
            android:textSize="20dp"/>
    <SeekBar
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:id="@+id/seekbar2"
            android:max="100" android:progress="20"
            app:layout_constraintTop_toBottomOf="@+id/age"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/level"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:id="@+id/weighttext"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/weight" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/seekbar1" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.184" app:layout_constraintVertical_bias="1.0"/>
    <SeekBar
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:max="140" android:progress="70"
            android:id="@+id/seekbar1"
            app:layout_constraintTop_toBottomOf="@+id/weight" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/age" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:id="@+id/agetext"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/seekbar1" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/seekbar2" app:layout_constraintStart_toEndOf="@+id/age"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.237" app:layout_constraintVertical_bias="1.0"/>
    <RadioGroup
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:id="@+id/radioGroup"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintTop_toBottomOf="@+id/gender"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/weight">
        <RadioButton
                android:text="男"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/boyButton" android:layout_weight="1"/>
        <RadioButton
                android:text="女"
                android:layout_width="60dp"
                android:layout_height="match_parent" android:id="@+id/girlButton" android:layout_weight="1"/>
    </RadioGroup>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/level" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:id="@+id/radioGroup2">
        <RadioButton
                android:text="低"
                android:layout_width="60dp"
                android:layout_height="wrap_content" android:id="@+id/lowButton" android:layout_weight="1"/>
        <RadioButton
                android:text="中"
                android:layout_width="60dp"
                android:layout_height="wrap_content" android:id="@+id/middleButton" android:layout_weight="1"/>
        <RadioButton
                android:text="高"
                android:layout_width="60dp"
                android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/highButton"/>
    </RadioGroup>
    <Button
            android:text="計算"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.527"
            app:layout_constraintVertical_bias="0.225"/>
</android.support.constraint.ConstraintLayout>