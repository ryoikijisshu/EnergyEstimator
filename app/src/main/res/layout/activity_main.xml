<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:text="体重"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/weighttext" android:gravity="center"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/gendertext"
            android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/gendertext"
    />
    <TextView
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:text="性別"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/gendertext" android:gravity="center"
            android:textSize="24sp" app:layout_constraintHorizontal_bias="0.149"
            app:layout_constraintVertical_bias="0.078"/>
    <TextView
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:text="年齢"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/agetext" android:gravity="center"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/weighttext"
            android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/weighttext"
    />
    <TextView
            android:text="身体活動レベル"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:id="@+id/leveltext"
            app:layout_constraintTop_toBottomOf="@+id/agetext" app:layout_constraintStart_toStartOf="@+id/agetext"
            android:layout_marginTop="80dp"
            android:textSize="24sp"/>
    <RadioGroup
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:id="@+id/gendergroup"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/gendertext" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent">
        <RadioButton
                android:text="男性"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/man" android:layout_weight="1"/>
        <RadioButton
                android:text="女性"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/woman" android:layout_weight="1"/>
    </RadioGroup>
    <SeekBar
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:id="@+id/weightseekBar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.228" app:layout_constraintVertical_bias="0.037"
            app:layout_constraintTop_toBottomOf="@+id/weighttext"/>
    <TextView
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:id="@+id/textview1" app:layout_constraintStart_toEndOf="@+id/weighttext"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp"
            app:layout_constraintTop_toTopOf="@+id/weighttext" android:gravity="center" android:textSize="24sp"
            android:text="0"/>
    <TextView
            android:text="0"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:id="@+id/textview2" app:layout_constraintStart_toEndOf="@+id/agetext"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" app:layout_constraintTop_toTopOf="@+id/agetext" android:gravity="center"
            android:textSize="24sp"/>
    <SeekBar
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:id="@+id/ageseekBar" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.228"
            app:layout_constraintVertical_bias="0.045" app:layout_constraintTop_toBottomOf="@+id/agetext"/>
    <RadioGroup
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:id="@+id/levelgroup" android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/leveltext" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:layout_marginTop="308dp"
            app:layout_constraintTop_toBottomOf="@+id/gendergroup">
        <RadioButton
                android:text="低"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/low" android:layout_weight="1"/>
        <RadioButton
                android:text="中"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/middle" android:layout_weight="1"/>
        <RadioButton
                android:text="高"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/high" android:layout_weight="1"/>
    </RadioGroup>
    <Button
            android:text="決定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/nextbutton" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.45" app:layout_constraintVertical_bias="0.95"/>

</android.support.constraint.ConstraintLayout>