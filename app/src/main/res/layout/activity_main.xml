<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体重"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/gender" android:layout_marginTop="32dp" android:id="@+id/weight"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="30sp"/>
    <TextView
            android:text="性別"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gender"
            android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/genderGroup" android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/gender"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent">
        <RadioButton
                android:text="男性"
                android:layout_width="103dp"
                android:layout_height="wrap_content" android:id="@+id/man" android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="30sp"/>
        <RadioButton
                android:text="女性"
                android:layout_width="100dp"
                android:layout_height="wrap_content" android:id="@+id/woman" android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="30sp"/>
    </RadioGroup>
    <SeekBar
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:max="100"
            app:layout_constraintHorizontal_bias="0.533" app:layout_constraintTop_toBottomOf="@+id/weight"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="年齢"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/age"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="30sp"
            android:layout_marginStart="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/weight"/>
    <SeekBar
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/age" android:max="80"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activitylevel" android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/level"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp">
        <RadioButton
                android:text="低"
                android:layout_width="74dp"
                android:layout_height="wrap_content" android:id="@+id/low" android:layout_weight="1"
                android:textSize="30sp"/>
        <RadioButton
                android:text="中"
                android:layout_width="75dp"
                android:layout_height="wrap_content" android:id="@+id/medium" android:layout_weight="1"
                android:textSize="30sp"/>
        <RadioButton
                android:text="高"
                android:layout_width="77dp"
                android:layout_height="wrap_content" android:id="@+id/high" android:layout_weight="1"
                android:textSize="30sp"/>
    </RadioGroup>
    <TextView
            android:text="身体活動レベル"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/level" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/age" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="30sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weightView" app:layout_constraintStart_toEndOf="@+id/weight"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" app:layout_constraintTop_toTopOf="@+id/weight"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="30sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ageView" android:textSize="30sp" app:layout_constraintStart_toEndOf="@+id/age"
            android:layout_marginLeft="50dp" android:layout_marginStart="50dp"
            app:layout_constraintTop_toTopOf="@+id/age" android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <Button
            android:text="決定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/decision" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="30sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/activitylevel"/>

</android.support.constraint.ConstraintLayout>