<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CheckActivity">

    <TextView
            android:text="入力内容"
            android:layout_width="97dp"
            android:layout_height="44dp"
            android:id="@+id/checkText" android:textSize="20sp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"/>
    <TextView
            android:text="性別"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sexText2" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/checkText"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/checkText"
            android:layout_marginLeft="8dp"/>
    <TextView
            android:text="体重"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weightText2"
            app:layout_constraintTop_toBottomOf="@+id/sexText2" app:layout_constraintStart_toStartOf="@+id/sexText2"
            android:layout_marginTop="24dp"/>
    <TextView
            android:text="年齢"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ageText2"
            app:layout_constraintTop_toBottomOf="@+id/weightText2"
            app:layout_constraintStart_toStartOf="@+id/weightText2"
            android:layout_marginTop="24dp"/>
    <TextView
            android:text="TextView"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weightCheck"
            app:layout_constraintTop_toTopOf="@+id/weightText2"
            app:layout_constraintStart_toStartOf="@+id/sexCheck"
    />
    <TextView
            android:text="TextView"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ageCheck"
            app:layout_constraintTop_toTopOf="@+id/ageText2" app:layout_constraintStart_toStartOf="@+id/weightCheck"
    />
    <TextView
            android:text="TextView"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/levelCheck"
            app:layout_constraintTop_toTopOf="@+id/levelText2" app:layout_constraintStart_toEndOf="@+id/levelText2"
            android:layout_marginStart="32dp" android:layout_marginLeft="32dp"/>
    <TextView
            android:text="身体活動レベル"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/levelText2"
            app:layout_constraintStart_toStartOf="@+id/weightText2"
            app:layout_constraintTop_toBottomOf="@+id/ageText2" android:layout_marginTop="24dp"/>
    <TextView
            android:text="TextView"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sexCheck"
            app:layout_constraintTop_toTopOf="@+id/sexText2" app:layout_constraintStart_toEndOf="@+id/sexText2"
            android:layout_marginStart="32dp" android:layout_marginLeft="32dp"/>
    <TextView
            android:text="この内容でよろしいですか？"
            android:layout_width="268dp"
            android:layout_height="31dp"
            android:id="@+id/checkText2" android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/levelText2" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginTop="84dp" app:layout_constraintHorizontal_bias="0.503"/>
    <Button
            android:text="はい"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yesButton" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/checkText2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="88dp"
            android:layout_marginStart="88dp"
    />
    <Button
            android:text="いいえ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noButton"
            app:layout_constraintTop_toTopOf="@+id/yesButton"
            app:layout_constraintStart_toEndOf="@+id/yesButton" android:layout_marginLeft="76dp"
            android:layout_marginStart="76dp"/>
</android.support.constraint.ConstraintLayout>