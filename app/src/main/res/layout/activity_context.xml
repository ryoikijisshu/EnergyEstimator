<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ContextActivity">

    <TextView
            android:text="入力内容"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/context"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="16dp"/>
    <TextView
            android:text="性別"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text1"
            app:layout_constraintTop_toBottomOf="@+id/context" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>
    <TextView
            android:text="体重"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/text1" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"/>
    <TextView
            android:text="年齢"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text3"
            app:layout_constraintTop_toBottomOf="@+id/text2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>
    <TextView
            android:text="身体活動"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text4" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/text3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sextext" tools:text="textview"
            app:layout_constraintStart_toEndOf="@+id/text1" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" app:layout_constraintTop_toTopOf="@+id/text1"
            android:layout_marginTop="24dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/agetext1"
            app:layout_constraintStart_toEndOf="@+id/text3"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="@+id/text3" android:layout_marginTop="24dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leveltext" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="@+id/text4" app:layout_constraintStart_toEndOf="@+id/text4"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weighttext1" app:layout_constraintStart_toEndOf="@+id/text2"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="@+id/text2" android:layout_marginTop="24dp"/>
    <Button
            android:text="はい"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yesbutton" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/leveltext"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/nobutton" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <Button
            android:text="いいえ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nobutton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="84dp" android:layout_marginRight="84dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/leveltext" app:layout_constraintVertical_bias="0.489"/>
</android.support.constraint.ConstraintLayout>